set default-bg "#16161D"

set inputbar-bg "#16161D"
set inputbar-fg "#C8C093"

set statusbar-bg "#16161D"
set statusbar-fg "#C8C093"

set recolor
set recolor-lightcolor "#1F1F28"
set recolor-darkcolor "#DCD7BA"

set selection-clipboard clipboard

# Custom keybinds to mimic behavior in less

map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map g goto top
